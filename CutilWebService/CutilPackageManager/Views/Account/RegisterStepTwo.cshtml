@model CutilPackageManager.Models.ConfirmEmailViewModel
@{
    ViewBag.Title = "RegisterStepTwo";
}

<h2>Confirm Account</h2>

<p>
    @using (Html.BeginForm("ConfirmEmail", "Account", FormMethod.Post))
    {
        
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmationCode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ConfirmationCode, new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m=>m.UserName)
        
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Activate" />
        </div>
    </div>

    }
</p>


